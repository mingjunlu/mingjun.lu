{
  "importOrder": [
    "^public/(.*)$",
    "^src/(.*)$",
    "^[./]"
  ],
  "importOrderSortSpecifiers": true,
  "printWidth": 80,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "plugins": [
    "prettier-plugin-astro",
    "@trivago/prettier-plugin-sort-imports"
  ],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ]
}
